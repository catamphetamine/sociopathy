хранилище.create_collection('circles', [[[['пользователь', 1], ['название', 1]], yes]])
	
http.put '/сеть/круги/состав', (ввод, вывод, пользователь) ->
	кого = db('people').id(ввод.данные.кого)
	круг = null
	
	if not ввод.данные.круг?
		круги = db('circles')._.find({ пользователь: пользователь._id }, { limit: 1 })
		
		if круги.пусто()
			return вывод.send(ошибка: "Круг не найден")
		
		круг = круги[0]
	else
		круг = { _id: db('circles').id(ввод.данные.круг) }
			
	db('circles')._.update({ _id: круг._id }, { $addToSet: { члены: кого } })
			
	вывод.send {}

