		<script type="text/javascript">
			var browser_engine_detector = {};

			browser_engine_detector.is_web_kit = function isWebKit()
			{
				return RegExp(" AppleWebKit/").test(navigator.userAgent);
			}

			browser_engine_detector.is_gecko = function isGecko()
			{
				return navigator.product == 'Gecko';
			}

			if (!browser_engine_detector.is_web_kit() && !browser_engine_detector.is_gecko())
			{
				alert("WebKit or Gecko engine is required. Try using Chrome or Safari, or FireFox.");
			}

			//add panel menu ("reading", "people", "help");

			$.bind = function(object, method)
			{
				var args = Array.prototype.slice.call(arguments, 2);

				return function() 
				{
					var args2 = [this].concat(args, $.makeArray(arguments));
					return method.apply(object, args2);
				};
			};

			//

			$(document).ready(function()
			{
				$("#panel_menu > li > a").hover
				(
					function() 
					{
						$(this).next("em").stop(true, true).animate({opacity: "show", top: "60"}, "slow");
						
					}, 
					function()
					{
						$(this).next("em").animate({opacity: "hide", top: "70"}, "fast");
					}
				);	

				activate_buttons();
				activate_button("join_button");
			});
		</script>

