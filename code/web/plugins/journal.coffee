http.get '/человек/журнал', (ввод, вывод, пользователь) ->
	сочинитель = пользовательское.взять.await({ 'адресное имя': ввод.данные.сочинитель })
	
	$ = {}
	$.пользователь = { имя: сочинитель.имя }
	
	снасти.batch_loading(ввод, $, 'журнал', { from: 'journals', query: { пользователь: сочинитель._id } })
	
	for заметка in $.журнал
		заметка.пользователь = пользовательское.поля(сочинитель)
		
	вывод.send $
			
http.get '/человек/журнал/запись', (ввод, вывод, пользователь) ->
	цепь(вывод)
		.сделать ->
			db('journals').findOne({ id: ввод.данные.запись }, @.в 'запись')
			
		.сделать ->
			пользовательское.подставить(@.$.запись, 'пользователь', @)
			
		.сделать ->
			вывод.send @.$